<!DOCTYPE html>
<html>
  <head>
    <title>Atomic</title>
    <%= stylesheet_link_tag    "application" %>
    <%= stylesheet_link_tag profile_path(@profile, "css") if @profile %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="header">
      <div id="nav">
        <div class="logo">SocialFTW</div>
        <div id="user-nav">
          <ul class="hmenu">
            <%= render 'devise/menu/registration_items' %>
            <%= render 'devise/menu/login_items' %>
          </ul>
        </div><!-- end #user-nav -->
      </div><!-- end #nav -->
    </div><!-- end #header -->
    <div class="background-container centered" style="padding-right: 0px; width: 100%; height: 657px; background-position: 50% 30px; ">
    </div>
    <div id="content">
      <% flash.each do |key, msg| %>
        <%= content_tag :p, h(msg), :class => "flash #{key}" %>
      <% end %>

      <%= yield %>
    </div><!-- end #content -->
  </body>
</html>
